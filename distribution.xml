<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>EA V-CORE</title>
    <welcome file="Welcome.html" mime-type="text/html" />
    <license file="License.txt" mime-type="text/plain" />
    <background file="background.jpg" alignment="bottomleft" scaling="none"/>
    <options customize="always" require-scripts="false"/>
    <domains enable_anywhere="false" enable_currentUserHome="false" enable_localSystem="true" />
    
    <choices-outline>
        <line choice="choice_vst3"/>
        <line choice="choice_au"/>
    </choices-outline>
    
    <choice id="choice_vst3" title="VST3 Plugin">
        <pkg-ref id="com.emuaudio.eavcore.vst3"/>
    </choice>
    
    <choice id="choice_au" title="Audio Unit Plugin">
        <pkg-ref id="com.emuaudio.eavcore.au"/>
    </choice>
    
    <pkg-ref id="com.emuaudio.eavcore.vst3" version="1.0.0" onConclusion="none">vst3.pkg</pkg-ref>
    <pkg-ref id="com.emuaudio.eavcore.au" version="1.0.0" onConclusion="none">au.pkg</pkg-ref>
</installer-gui-script>
